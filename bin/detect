#!/usr/bin/env bash
# bin/use <build-dir>

# TODO: Use awk or other tool to perform the war packaging check with newline and whitespaces ignored.
# Perhaps also fail detection if a .server directory is present. In that case, we assume "full control"
# mode.

if [ -f $1/pom.xml ]; then
  if (grep -q "<packaging>war</packaging>" $1/pom.xml) ; then
    echo "Java" && exit 0
  else
    echo "no" && exit 1
  fi
else
  echo "no" && exit 1
fi
